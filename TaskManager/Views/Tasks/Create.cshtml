@model TaskManager.Models.ETasks

@{
    ViewData["Title"] = "Create";
}

<h4 class="px-4">Create Task</h4>
<hr />
<div class="px-4">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="PriorityID" class="control-label"></label>
                <select asp-for="PriorityID" class="form-control" asp-items="ViewBag.PriorityID"></select>
                <span asp-validation-for="PriorityID" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="EstTime" class="control-label"></label><br />
                <div class="row m-0">
                    <div class="col-md-5 ps-0"><input type="number" min="0" max="23" placeholder="hh" value="00" id ="hours" class="form-control" name="hours"></div>
                    <label class="col-md-1 px-0 mt-1">HH :</label>
                    <div class="col-md-5 ps-0"><input type="number" min="0" max="59" placeholder="mm" value="00" id ="min" class="form-control" name="min"></div>
                    <label class="col-md-1 px-0 mt-1">MM</label>
                </div>
                <span asp-validation-for="EstTime" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="ProjectID" class="control-label"></label>
                <select asp-for="ProjectID" class ="form-control" asp-items="ViewBag.ProjectID"></select>
            </div><br />
            <div class="form-group">
                <label asp-for="EpicsID" class="control-label"></label>
                <select asp-for="EpicsID" class ="form-control" asp-items="ViewBag.EpicsID"></select>
            </div><br />
            <div class="form-group">
                <label asp-for="AssignedTo" class="control-label"></label>
                <select asp-for="AssignedTo" class ="form-control" asp-items="ViewBag.AssignedTo"></select>
            </div><br />
            <div class="form-group">
                <label asp-for="RequestedBy" class="control-label"></label>
                <select asp-for="RequestedBy" class ="form-control" asp-items="ViewBag.RequestedBy"></select>
            </div><br />
            <div class="form-group">
                <label asp-for="RequestDate" class="control-label"></label>
                <input asp-for="RequestDate" class="form-control" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="PlannedStart" class="control-label"></label>
                <input asp-for="PlannedStart" class="form-control" />
                <span asp-validation-for="PlannedStart" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div><br />
            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a type="button" class="btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
